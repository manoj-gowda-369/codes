# Exchange rates (example, can be updated)
rates = {
    "USD": 0.012,
    "EUR": 0.011,
    "GBP": 0.0096,
    "JPY": 1.83,
    "AED": 0.044,
    "AUD": 0.018,
}

# Show options
print("Convert INR to:")
for code in rates:
    print(f" - {code}")

# Get user choice
currency = input("Enter currency code (e.g., USD, EUR): ").upper()

# Check if currency exists
if currency in rates:
    rupees = float(input("Enter amount in Rupees: â‚¹ "))
    rate = rates[currency]
    converted = rupees * rate
    symbol = {
        "USD": "$", "EUR": "â‚¬", "GBP": "Â£", "JPY": "Â¥", "AED": "Ø¯.Ø¥", "AUD": "A$"
    }.get(currency, "")
    
    print(f"{symbol}{converted:.2f} {currency}")
    
    # ðŸ”¥ New feature: Show â‚¹1 equivalent
    print(f"1 INR = {symbol}{rate:.4f} {currency}")
else:
    print("Sorry, unsupported currency code.")

